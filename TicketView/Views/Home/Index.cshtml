@using TicketView.Models
@model TicketView.Controllers.HomeController.ViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout.cshtml";
}

@for (int i = 0; i < Model.Tickets.Count; i += 3)
{
    <div class="row">
        @foreach (Ticket ticket in Model.Tickets.Skip(i).Take(3))
        {
            var faded = ticket.Status == "Fixed" || ticket.Status == "Test" ? "faded" : null;
            <div class="well col-md-4 @faded">
                <h2><a href="https://www.assembla.com/spaces/ndproject/tickets/@ticket.Number" target="_blank">@ticket.Title</a></h2>
                <h4>Created @ticket.Created.ToShortDateString()</h4>
                <p>#@ticket.Number [@ticket.Status]</p>
            </div>
        }
    </div>
}